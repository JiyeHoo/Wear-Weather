<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_vp_now_location"
            android:layout_above="@+id/tv_vp_now_weather"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地点"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/tv_vp_now_weather"
            android:layout_above="@+id/tv_vp_now_temp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天气"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/tv_vp_now_temp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0°"
            android:textSize="50sp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_vp_now_air"
            android:layout_below="@+id/tv_vp_now_temp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:text="空气"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/tv_vp_now_time"
            android:layout_below="@+id/tv_vp_now_air"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:text="观测时间"
            android:layout_gravity="center_horizontal"/>

    </RelativeLayout>

</LinearLayout>